				{
					"name": "POST login user",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"(() => {\r",
									"  try {\r",
									"    const j = pm.response.json();\r",
									"\r",
									"    // Guarda o token JWT\r",
									"    if (j && j.token) {\r",
									"      pm.environment.set(\"token\", j.token);\r",
									"    }\r",
									"\r",
									"    // Guarda o ID do utilizador\r",
									"    if (j.user?.id) {\r",
									"      pm.environment.set(\"userId\", j.user.id);\r",
									"    }\r",
									"\r",
									"    // Guarda o nickName do utilizador\r",
									"    if (j.user?.nickName) {\r",
									"      pm.environment.set(\"nickName\", j.user.nickName);\r",
									"    }\r",
									"\r",
									"  } catch (e) {\r",
									"    console.error(\"Erro ao processar resposta JSON:\", e);\r",
									"  }\r",
									"})();\r",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
